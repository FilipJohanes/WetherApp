# IMAP to Webhook Bridge Configuration
# Copy this to .env and fill in your values

# Email Configuration (same as your current app)
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Webhook Configuration
WEBHOOK_URL=http://localhost:5000/webhook/email
WEBHOOK_TIMEOUT=10

# Bridge Configuration
BRIDGE_CHECK_INTERVAL=30
MAX_EMAILS_PER_CHECK=50

# For production deployment:
# WEBHOOK_URL=https://your-domain.com/webhook/email
# BRIDGE_CHECK_INTERVAL=10